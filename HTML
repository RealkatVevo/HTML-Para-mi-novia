<script>
  const sleep = ms => new Promise(res => setTimeout(res, ms));

  const openAme = document.getElementById('openAme');
  const ameOverlay = document.getElementById('ameOverlay');
  const closeAme = document.getElementById('closeAme');
  const page1 = document.getElementById('amePage1');
  const page2 = document.getElementById('amePage2');
  const page3Yes = document.getElementById('amePage3Yes');
  const page3No = document.getElementById('amePage3No');
  const toPage2 = document.getElementById('toPage2');
  const ameYesBtn = document.getElementById('ameYesBtn');
  const ameNoBtn = document.getElementById('ameNoBtn');
  const amePulse = document.getElementById('amePulse');
  const ameFinalText = document.getElementById('ameFinalText');

  openAme.addEventListener('click', () => {
    ameOverlay.classList.add('show');
    ameOverlay.style.display = 'flex';
    ameOverlay.setAttribute('aria-hidden','false');
    resetAme();
    showPage(1);
  });

  closeAme.addEventListener('click', () => {
    ameOverlay.classList.remove('show');
    ameOverlay.style.display = 'none';
    ameOverlay.setAttribute('aria-hidden','true');
    resetAme();
  });

  document.addEventListener('keydown', (e) => { if (e.key === 'Escape') { closeAme.click(); } });
  ameOverlay.addEventListener('click', (e) => { if (e.target === ameOverlay) closeAme.click(); });

  function resetAme(){
    page1.style.display = 'flex';
    page2.style.display = 'none';
    page3Yes.style.display = 'none';
    page3No.style.display = 'none';
    ameFinalText.textContent = '';
    amePulse.style.display = 'none';
  }
  function showPage(n){
    page1.style.display = (n===1)?'flex':'none';
    page2.style.display = (n===2)?'flex':'none';
    page3Yes.style.display = (n===3)?'flex':'none';
    page3No.style.display = (n===4)?'flex':'none';
  }

  toPage2.addEventListener('click', () => { showPage(2); });

  ameYesBtn.addEventListener('click', async () => {
    showPage(3);
    amePulse.style.display = 'block';
    amePulse.animate([{transform:'scale(0.94)'},{transform:'scale(1.18)'},{transform:'scale(1)'}], {duration:620, easing:'ease-in-out'});
    await sleep(420);
    await typeText(ameFinalText, "üíñEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEE :D :D :D TKMüíñ", 70);
  });

  ameNoBtn.addEventListener('click', () => { showPage(4); amePulse.style.display = 'none'; });

  async function typeText(el, text, delay){
    el.textContent = '';
    for (let c of text){
      el.textContent += c;
      await sleep(delay);
    }
  }
</script>
